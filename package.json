{
  "name": "bill-please",
  "description": "This is an app that will help you calculate your expenses and divide them up for your party.",
  "repository": {
    "type": "git",
    "url": "https://github.com/chatreejs/bill-please.git"
  },
  "version": "0.4.3-beta.1",
  "authors": [
    {
      "name": "Chanon Treemeth",
      "email": "chanon.t@chatree.dev"
    }
  ],
  "private": false,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "vite",
    "start:develop": "env-cmd -f .env.develop vite",
    "build": "tsc && vite build",
    "build:develop": "tsc && env-cmd -f .env.develop vite build",
    "build:prod": "tsc && env-cmd -f .env.prod vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage .",
    "test:debug": "jest --inspect-brk --runInBand --no-cache",
    "check-types": "tsc --noemit",
    "eslint": "eslint",
    "lint": "npm run eslint; npm run check-types",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:write": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@ant-design/icons": "^5.4.0",
    "@fontsource/kanit": "^5.0.20",
    "@fontsource/outfit": "^5.0.13",
    "@fontsource/pacifico": "^5.0.13",
    "@reduxjs/toolkit": "^2.2.7",
    "antd": "^5.20.0",
    "dayjs": "^1.11.13",
    "flag-icons": "^7.2.3",
    "i18next": "^23.13.0",
    "i18next-http-backend": "^2.5.2",
    "modern-screenshot": "^4.4.39",
    "promptpay-qr": "^0.5.0",
    "react": "^18.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "react-ga4": "^2.1.0",
    "react-i18next": "^15.0.1",
    "react-mobile-share": "^2.2.2",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.0",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "styled-components": "^6.1.12",
    "uuidv7": "^1.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.0.1",
    "@eslint/js": "^9.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^29.5.6",
    "@types/node": "^18.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.9.0",
    "vite": "^5.3.4",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-pwa": "^0.20.2",
